<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= yield(:view_specific_stylesheets) %>
    <%= yield(:view_specific_javascripts) %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
  </head>
  <body>
    <% if flash[:top_message] %>
      <%= content_tag(:div, flash[:top_message], id: "top_message") %>
    <% end %>
    <%= yield %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>