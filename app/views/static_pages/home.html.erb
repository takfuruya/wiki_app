<% provide(:title, 'Eqlea') %>

<% if !signed_in? %>
  <%= link_to "About This Website", '#', id: "home-about-link" %>

  <!--
  <form method="POST" action="/signinup" id="sign-in-form2">
    <input id="email-input" type="text" name="email" placeholder="Email" />
    <input type="password" name="password" placeholder="Password" />
    <label><input type="checkbox" name="signup" value="signup" /> Sign up</label>
    <input type="submit" value="Sign in" />
  </form>
  -->

  <%= form_tag do %>
    <%= render 'shared/error_messages' %>
    <%= text_field_tag :email, nil, placeholder: "Email" %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    <%= password_field_tag :password_confirmation, nil, placeholder: "Confirm Password" %>
    <label><%= check_box_tag :sign_up? %> New user</label>
    <%= submit_tag("Sign in") %>
  <% end %>

<% else %>

  <h1><%= current_user.name %></h1>
  <p>You Are Signed In</p>
  <%= link_to "Sign out", root_path, method: "delete" %>
  <%= link_to "Public profile", current_user %>
  
  <%= form_tag user_path(current_user), method: :put do %>
    <%= render 'shared/error_messages' %>
    <%= text_field_tag :name, current_user.name %>
    <%= text_field_tag :email, current_user.email %>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
    <%= password_field_tag :password_confirmation, nil, placeholder: "Confirm Password" %>
    <%= submit_tag("Save changes") %>
  <% end %>

<% end %>